<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.LibraryManagementController"
            prefWidth="1500" prefHeight="900">


    <top>
        <VBox spacing="15" styleClass="header-gradient">
            <Label text="Library Management System" styleClass="page-title-white"/>
            <HBox spacing="15">
                <VBox spacing="3" HBox.hgrow="ALWAYS" styleClass="card-transparent">
                    <Label text="Total Books" styleClass="text-white"/>
                    <Label fx:id="totalBooksLabel" text="12,450" styleClass="text-white"/>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS" styleClass="card-transparent">
                    <Label text="Checked Out" styleClass="text-white"/>
                    <Label fx:id="checkedOutLabel" text="342" styleClass="text-white"/>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS" styleClass="card-transparent">
                    <Label text="Overdue" styleClass="text-white"/>
                    <Label fx:id="overdueLabel" text="18" styleClass="text-white"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Catalog">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <TextField fx:id="searchField" promptText="Search books..."/>
                    <TableView fx:id="catalogTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="titleColumn" text="Title" prefWidth="250"/>
                            <TableColumn fx:id="authorColumn" text="Author" prefWidth="150"/>
                            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120"/>
                            <TableColumn fx:id="availableColumn" text="Available" prefWidth="80"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Check Out/In">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox spacing="10">
                        <TextField fx:id="studentIdField" promptText="Student ID"/>
                        <TextField fx:id="bookIsbnField" promptText="Book ISBN"/>
                        <Button text="Check Out" onAction="#handleCheckOut"/>
                        <Button text="Check In" onAction="#handleCheckIn"/>
                    </HBox>
                    <TableView fx:id="checkoutsTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="checkoutStudentColumn" text="Student" prefWidth="150"/>
                            <TableColumn fx:id="checkoutBookColumn" text="Book" prefWidth="200"/>
                            <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
