<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.LibraryManagementController"
            stylesheets="@../css/application.css"
            prefWidth="1500" prefHeight="900">

    <top>
        <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #00bcd4, #0097a7); -fx-padding: 20;">
            <Label text="Library Management System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <HBox spacing="15">
                <VBox spacing="3" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Total Books" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="totalBooksLabel" text="12,450" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Checked Out" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="checkedOutLabel" text="342" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Overdue" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="overdueLabel" text="18" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Catalog">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <TextField fx:id="searchField" promptText="Search books..."/>
                    <TableView fx:id="catalogTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="titleColumn" text="Title" prefWidth="250"/>
                            <TableColumn fx:id="authorColumn" text="Author" prefWidth="150"/>
                            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120"/>
                            <TableColumn fx:id="availableColumn" text="Available" prefWidth="80"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Check Out/In">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox spacing="10">
                        <TextField fx:id="studentIdField" promptText="Student ID"/>
                        <TextField fx:id="bookIsbnField" promptText="Book ISBN"/>
                        <Button text="Check Out" onAction="#handleCheckOut"/>
                        <Button text="Check In" onAction="#handleCheckIn"/>
                    </HBox>
                    <TableView fx:id="checkoutsTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="checkoutStudentColumn" text="Student" prefWidth="150"/>
                            <TableColumn fx:id="checkoutBookColumn" text="Book" prefWidth="200"/>
                            <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
