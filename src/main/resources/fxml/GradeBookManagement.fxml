<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.GradeBookManagementController"
            prefWidth="1500" prefHeight="900">


    <!-- Top: Header -->
    <top>
        <VBox spacing="15" styleClass="card">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Grade Book Management"
                           styleClass="page-title-white"/>
                    <Label text="Manage assignments, assessments, and student grades with real-time GPA calculation"
                           styleClass="text-white"/>
                </VBox>

                <!-- Course Selection -->
                <VBox spacing="5" alignment="CENTER_RIGHT">
                    <Label text="Current Course" styleClass="text-white"/>
                    <ComboBox fx:id="courseSelectionComboBox" promptText="Select course..." prefWidth="250"/>
                </VBox>
            </HBox>

            <!-- Quick Stats -->
            <HBox spacing="15">
                <VBox spacing="3" styleClass="card-transparent">
                    <Label text="Students" styleClass="text-white"/>
                    <Label fx:id="studentCountLabel" text="0" styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" styleClass="card-transparent">
                    <Label text="Assignments" styleClass="text-white"/>
                    <Label fx:id="assignmentCountLabel" text="0" styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" styleClass="card-transparent">
                    <Label text="Class Average" styleClass="text-white"/>
                    <Label fx:id="classAverageLabel" text="0%" styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" styleClass="card-transparent">
                    <Label text="Ungraded" styleClass="text-white"/>
                    <Label fx:id="ungradedCountLabel" text="0" styleClass="text-white"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Main Content -->
    <center>
        <SplitPane dividerPositions="0.25" styleClass="main-container">

            <!-- Left: Assignments/Categories -->
            <VBox spacing="15" styleClass="form-panel">
                <Label text="Assignments &amp; Categories" styleClass="section-title"/>

                <!-- Category Weights -->
                <VBox spacing="10" styleClass="card, metric-success">
                    <Label text="Grade Categories" styleClass="section-title-14-green"/>

                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="60"/>
                            <ColumnConstraints percentWidth="40"/>
                        </columnConstraints>

                        <Label text="Tests/Exams:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="testsWeightField" text="40" prefWidth="60" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Quizzes:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="quizzesWeightField" text="25" prefWidth="60" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Homework:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="homeworkWeightField" text="20" prefWidth="60" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Participation:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="participationWeightField" text="15" prefWidth="60" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>

                    <Label fx:id="totalWeightLabel" text="Total: 100%" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                    <Button text="Save Weights" onAction="#handleSaveWeights" styleClass="button-primary" maxWidth="Infinity"/>
                </VBox>

                <!-- Assignment List -->
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Assignments" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ New" onAction="#handleNewAssignment" styleClass="button-primary"/>
                    </HBox>

                    <ListView fx:id="assignmentListView" VBox.vgrow="ALWAYS"/>
                </VBox>

                <!-- Quick Actions -->
                <VBox spacing="8">
                    <Button text="Import Grades from CSV" onAction="#handleImportGrades" styleClass="button-primary" maxWidth="Infinity"/>
                    <Button text="Export Grade Book" onAction="#handleExportGradeBook" styleClass="button-primary" maxWidth="Infinity"/>
                </VBox>
            </VBox>

            <!-- Center: Grade Sheet -->
            <BorderPane styleClass="card">
                <top>
                    <VBox spacing="10" styleClass="section-header-bottom-border">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Student Grades" styleClass="section-title"/>

                            <Region HBox.hgrow="ALWAYS"/>

                            <!-- View Options -->
                            <ToggleButton fx:id="gridViewToggle" text="Grid View" selected="true"/>
                            <ToggleButton fx:id="listViewToggle" text="List View"/>

                            <!-- Tools -->
                            <Button text="Calculate All" onAction="#handleCalculateAll" styleClass="header-purple"/>
                            <Button text="Post Grades" onAction="#handlePostGrades" styleClass="button-primary"/>
                        </HBox>

                        <!-- Filters -->
                        <HBox spacing="10">
                            <ComboBox fx:id="categoryFilterComboBox" promptText="All Categories" prefWidth="150"/>
                            <ComboBox fx:id="statusFilterComboBox" promptText="All Status" prefWidth="150"/>
                            <TextField fx:id="studentSearchField" promptText="Search students..." prefWidth="200"/>
                            <CheckBox fx:id="showMissingOnlyCheckBox" text="Missing Only"/>
                        </HBox>
                    </VBox>
                </top>

                <center>
                    <ScrollPane fitToWidth="true" fitToHeight="true">
                        <TableView fx:id="gradeSheetTableView" style="-fx-padding: 10;">
                            <columns>
                                <TableColumn fx:id="studentNameColumn" text="Student Name" prefWidth="180" sortable="true"/>
                                <TableColumn fx:id="studentIdColumn" text="ID" prefWidth="80"/>
                                <!-- Assignment columns will be added dynamically -->
                                <TableColumn fx:id="currentGradeColumn" text="Current Grade" prefWidth="100"/>
                                <TableColumn fx:id="letterGradeColumn" text="Letter" prefWidth="60"/>
                            </columns>
                        </TableView>
                    </ScrollPane>
                </center>

                <bottom>
                    <VBox spacing="10" styleClass="card">
                        <HBox spacing="15">
                            <Label text="Grade Distribution:" styleClass="form-label"/>
                            <Label fx:id="gradeDistributionLabel" text="A: 0 | B: 0 | C: 0 | D: 0 | F: 0" style="-fx-font-size: 11px;"/>
                        </HBox>

                        <ProgressBar fx:id="gradingProgressBar" prefWidth="Infinity" progress="0"/>
                        <Label fx:id="gradingProgressLabel" text="0% graded" styleClass="text-muted"/>
                    </VBox>
                </bottom>
            </BorderPane>

        </SplitPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="card">
            <Label fx:id="statusLabel" text="Ready" style="-fx-font-size: 11px;"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="lastSavedLabel" text="Unsaved changes" styleClass="text-muted"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="selectedAssignmentLabel" text="No assignment selected" styleClass="text-muted"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Save All" onAction="#handleSaveAll" styleClass="button-primary"/>
        </HBox>
    </bottom>

</BorderPane>
