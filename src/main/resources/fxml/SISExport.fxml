<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
SIS Export Dashboard
Export schedules to various Student Information Systems

Location: src/main/resources/fxml/SISExport.fxml
-->

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.heronix.ui.controller.SISExportController"
            styleClass="main-container">

    <!-- HEADER -->
    <top>
        <VBox styleClass="header-section">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="page-header">
                <Label text="ðŸ“¤ SIS Export" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ“ Open Export Folder" onAction="#handleOpenExportFolder" styleClass="button-secondary"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <SplitPane dividerPositions="0.65" styleClass="split-pane">

            <!-- LEFT: Export Configuration -->
            <VBox spacing="15" styleClass="content-container">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <!-- Export Type Selection -->
                <VBox spacing="10" styleClass="card">
                    <Label text="1ï¸âƒ£ Select Export Type" styleClass="section-title"/>

                    <VBox spacing="8">
                        <RadioButton fx:id="masterScheduleRadio" text="Master Schedule (All Sections)" toggleGroup="$exportTypeGroup" selected="true"/>
                        <RadioButton fx:id="studentSchedulesRadio" text="Student Schedules" toggleGroup="$exportTypeGroup"/>
                        <RadioButton fx:id="teacherSchedulesRadio" text="Teacher Schedules" toggleGroup="$exportTypeGroup"/>
                        <RadioButton fx:id="courseSectionsRadio" text="Course Sections Only" toggleGroup="$exportTypeGroup"/>
                        <RadioButton fx:id="enrollmentsRadio" text="Student Enrollments" toggleGroup="$exportTypeGroup"/>
                    </VBox>
                </VBox>

                <!-- Format Selection -->
                <VBox spacing="10" styleClass="card">
                    <Label text="2ï¸âƒ£ Select SIS Format" styleClass="section-title"/>

                    <VBox spacing="10">
                        <!-- PowerSchool -->
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="format-option"
                              styleClass="card">
                            <RadioButton fx:id="powerSchoolRadio" toggleGroup="$formatGroup" selected="true"/>
                            <VBox spacing="3">
                                <Label text="PowerSchool" styleClass="form-label"/>
                                <Label text="CSV format compatible with PowerSchool SIS" wrapText="true"
                                       styleClass="text-muted-11"/>
                            </VBox>
                        </HBox>

                        <!-- Skyward -->
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="format-option"
                              styleClass="card">
                            <RadioButton fx:id="skywardRadio" toggleGroup="$formatGroup"/>
                            <VBox spacing="3">
                                <Label text="Skyward" styleClass="form-label"/>
                                <Label text="Tab-delimited format for Skyward Student Management" wrapText="true"
                                       styleClass="text-muted-11"/>
                            </VBox>
                        </HBox>

                        <!-- Infinite Campus -->
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="format-option"
                              styleClass="card">
                            <RadioButton fx:id="infiniteCampusRadio" toggleGroup="$formatGroup"/>
                            <VBox spacing="3">
                                <Label text="Infinite Campus" styleClass="form-label"/>
                                <Label text="CSV format for Infinite Campus SIS" wrapText="true"
                                       styleClass="text-muted-11"/>
                            </VBox>
                        </HBox>

                        <!-- Generic CSV -->
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="format-option"
                              styleClass="card">
                            <RadioButton fx:id="genericCSVRadio" toggleGroup="$formatGroup"/>
                            <VBox spacing="3">
                                <Label text="Generic CSV" styleClass="form-label"/>
                                <Label text="Standard CSV format for manual import" wrapText="true"
                                       styleClass="text-muted-11"/>
                            </VBox>
                        </HBox>

                        <!-- Excel -->
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="format-option"
                              styleClass="card">
                            <RadioButton fx:id="excelRadio" toggleGroup="$formatGroup"/>
                            <VBox spacing="3">
                                <Label text="Microsoft Excel" styleClass="form-label"/>
                                <Label text="Excel workbook (.xlsx) for analysis" wrapText="true"
                                       styleClass="text-muted-11"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Export Options -->
                <VBox spacing="10" styleClass="card">
                    <Label text="3ï¸âƒ£ Export Options" styleClass="section-title"/>

                    <VBox spacing="8">
                        <CheckBox fx:id="validateDataCheckbox" text="Validate data before export" selected="true"/>
                        <CheckBox fx:id="openAfterExportCheckbox" text="Open file after export" selected="false"/>
                        <CheckBox fx:id="includeHeaderCheckbox" text="Include header row" selected="true"/>
                    </VBox>

                    <Separator/>

                    <!-- Custom Output Path -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Output Path:" prefWidth="100"/>
                        <TextField fx:id="outputPathField" promptText="Auto-generate" HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ“" onAction="#handleBrowseOutputPath" styleClass="button-secondary"/>
                    </HBox>
                </VBox>

                <!-- Preview -->
                <VBox spacing="10" styleClass="card main-container">
                    <Label text="ðŸ“‹ Preview" styleClass="section-title"/>
                    <TextArea fx:id="previewTextArea" prefRowCount="6" editable="false"
                              promptText="Click 'Preview Export' to see sample data"
                              style="-fx-font-family: 'Courier New'; -fx-font-size: 11;"/>
                    <Button text="ðŸ‘ï¸ Preview Export" onAction="#handlePreview" prefWidth="150" styleClass="button-secondary"/>
                </VBox>

                <!-- Export Button -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="ðŸ“¤ Export Now" onAction="#handleExport" prefWidth="200" prefHeight="40"
                            styleClass="button-primary"
                            style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                </HBox>

            </VBox>

            <!-- RIGHT: Export History & Status -->
            <VBox spacing="15" styleClass="details-panel card">

                <!-- Current Export Status -->
                <VBox spacing="10" styleClass="card">
                    <Label text="âš™ï¸ Export Status" styleClass="section-title"/>

                    <VBox fx:id="statusContainer" spacing="8">
                        <Label fx:id="statusLabel" text="Ready to export" styleClass="stat-description"/>
                        <ProgressBar fx:id="exportProgressBar" progress="0" prefWidth="250" visible="false"/>
                    </VBox>
                </VBox>

                <!-- Validation Results -->
                <VBox spacing="10" styleClass="card">
                    <Label text="âœ“ Validation" styleClass="section-title"/>
                    <VBox fx:id="validationResultsContainer" spacing="5">
                        <Label text="No validation run yet" styleClass="text-muted-11"/>
                    </VBox>
                    <Button text="Run Validation" onAction="#handleValidate" prefWidth="150" styleClass="button-secondary"/>
                </VBox>

                <!-- Export History -->
                <VBox spacing="10" styleClass="card">
                    <Label text="ðŸ“œ Recent Exports" styleClass="section-title"/>

                    <ListView fx:id="exportHistoryList" prefHeight="200" styleClass="export-history-list">
                        <placeholder>
                            <Label text="No exports yet"/>
                        </placeholder>
                    </ListView>

                    <Button text="Clear History" onAction="#handleClearHistory" prefWidth="120" styleClass="button-secondary"/>
                </VBox>

                <!-- Export Statistics -->
                <VBox spacing="10" styleClass="card metric-info">
                    <Label text="ðŸ“Š Statistics" styleClass="section-title"/>

                    <GridPane hgap="10" vgap="6">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="130"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="50"/>
                        </columnConstraints>

                        <Label text="Total Sections:" styleClass="stat-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="totalSectionsLabel" text="0" styleClass="stat-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Total Students:" styleClass="stat-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="totalStudentsLabel" text="0" styleClass="stat-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Total Teachers:" styleClass="stat-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="totalTeachersLabel" text="0" styleClass="stat-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Exports Today:" styleClass="stat-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Label fx:id="exportsTodayLabel" text="0" styleClass="stat-value" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                </VBox>

                <!-- Help -->
                <VBox spacing="8" styleClass="card">
                    <Label text="ðŸ’¡ Help" styleClass="section-title"/>
                    <Label text="Export formats are optimized for direct import into each SIS system. Always validate your data before exporting."
                           wrapText="true" styleClass="text-muted-11"/>
                </VBox>

            </VBox>

        </SplitPane>
    </center>

    <!-- BOTTOM: Quick Actions -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="footer-section"
              styleClass="card">
            <Label text="Quick Export:" styleClass="filter-label"/>
            <Button text="PowerSchool Students" onAction="#handleQuickPowerSchoolStudents" styleClass="button-secondary"/>
            <Button text="Skyward Sections" onAction="#handleQuickSkywardSections" styleClass="button-secondary"/>
            <Button text="Excel Master Schedule" onAction="#handleQuickExcelMaster" styleClass="button-secondary"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="footerStatusLabel" text="Ready" styleClass="status-label"/>
        </HBox>
    </bottom>

</BorderPane>
