<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.DisciplineReportsController"
            prefWidth="1500" prefHeight="950"
            styleClass="main-container">


    <!-- Top: Header & Filters -->
    <top>
        <VBox spacing="15" styleClass="header-container">
            <Label text="Discipline Reports &amp; Analytics" styleClass="text-blue-header"/>
            <Label text="Comprehensive behavior incident reporting, trend analysis, and data-driven insights for intervention planning"
                   styleClass="text-subtitle" wrapText="true"/>

            <!-- Filters -->
            <HBox spacing="15" styleClass="filter-bar-top">
                <VBox spacing="5">
                    <Label text="Report Type" styleClass="form-label"/>
                    <ComboBox fx:id="reportTypeComboBox" prefWidth="200">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="SCHOOL_WIDE"/>
                                <String fx:value="STUDENT_SUMMARY"/>
                                <String fx:value="CATEGORY_BREAKDOWN"/>
                                <String fx:value="TREND_ANALYSIS"/>
                                <String fx:value="INTERVENTION_NEEDED"/>
                                <String fx:value="POSITIVE_RECOGNITION"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <VBox spacing="5">
                    <Label text="Student (Optional)" styleClass="form-label"/>
                    <ComboBox fx:id="studentFilterComboBox" prefWidth="250" promptText="All students"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Start Date" styleClass="form-label"/>
                    <DatePicker fx:id="startDatePicker" prefWidth="150"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="End Date" styleClass="form-label"/>
                    <DatePicker fx:id="endDatePicker" prefWidth="150"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Behavior Type" styleClass="form-label"/>
                    <ComboBox fx:id="behaviorTypeFilterComboBox" prefWidth="150">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="ALL"/>
                                <String fx:value="POSITIVE"/>
                                <String fx:value="NEGATIVE"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <VBox spacing="5" alignment="BOTTOM_LEFT">
                    <Label text=" "/>
                    <HBox spacing="10">
                        <Button text="Generate Report" onAction="#handleGenerateReport"
                                styleClass="button-primary"/>
                        <Button text="Export PDF" onAction="#handleExportPDF"
                                styleClass="button-primary"/>
                        <Button text="Export Excel" onAction="#handleExportExcel"
                                styleClass="button-primary"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Report Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane-transparent">
            <VBox spacing="20" styleClass="content-padding">

                <!-- Summary Statistics Cards -->
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="20"/>
                    </columnConstraints>

                    <!-- Total Incidents Card -->
                    <VBox spacing="10" styleClass="stat-card, card"
                          GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Total Incidents" styleClass="text-muted"/>
                        <Label fx:id="totalIncidentsLabel" text="0" styleClass="stat-value-primary-large"/>
                        <Label fx:id="totalIncidentsChangeLabel" text="+0% from previous period" styleClass="text-muted"/>
                    </VBox>

                    <!-- Positive Incidents Card -->
                    <VBox spacing="10" styleClass="stat-card, card, metric-success"
                          GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Positive Incidents" styleClass="text-muted"/>
                        <Label fx:id="positiveIncidentsLabel" text="0" styleClass="stat-value-success-large"/>
                        <Label fx:id="positivePercentLabel" text="0% of total" styleClass="text-muted"/>
                    </VBox>

                    <!-- Negative Incidents Card -->
                    <VBox spacing="10" styleClass="stat-card, card, metric-danger"
                          GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <Label text="Negative Incidents" styleClass="text-muted"/>
                        <Label fx:id="negativeIncidentsLabel" text="0" styleClass="stat-value-danger-large"/>
                        <Label fx:id="negativePercentLabel" text="0% of total" styleClass="text-muted"/>
                    </VBox>

                    <!-- Admin Referrals Card -->
                    <VBox spacing="10" styleClass="stat-card, card, metric-warning"
                          GridPane.columnIndex="3" GridPane.rowIndex="0">
                        <Label text="Admin Referrals" styleClass="text-muted"/>
                        <Label fx:id="adminReferralsLabel" text="0" styleClass="stat-value-warning-large"/>
                        <Label fx:id="adminReferralsPercentLabel" text="0% of negative" styleClass="text-muted"/>
                    </VBox>

                    <!-- Students Affected Card -->
                    <VBox spacing="10" styleClass="stat-card, card"
                          GridPane.columnIndex="4" GridPane.rowIndex="0">
                        <Label text="Students Affected" styleClass="text-muted"/>
                        <Label fx:id="studentsAffectedLabel" text="0" styleClass="stat-value-purple-large"/>
                        <Label fx:id="avgIncidentsPerStudentLabel" text="0.0 avg per student" styleClass="text-muted"/>
                    </VBox>
                </GridPane>

                <!-- Charts Section -->
                <GridPane hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>

                    <!-- Category Breakdown Chart -->
                    <VBox spacing="15" styleClass="chart-section"
                          GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Incidents by Category" styleClass="chart-section-title"/>
                        <PieChart fx:id="categoryPieChart" legendVisible="true" prefHeight="300"/>
                    </VBox>

                    <!-- Severity Breakdown Chart -->
                    <VBox spacing="15" styleClass="chart-section"
                          GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Incidents by Severity" styleClass="chart-section-title"/>
                        <PieChart fx:id="severityPieChart" legendVisible="true" prefHeight="300"/>
                    </VBox>

                    <!-- Trend Line Chart -->
                    <VBox spacing="15" styleClass="chart-section"
                          GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                        <Label text="Monthly Behavior Trend" styleClass="chart-section-title"/>
                        <LineChart fx:id="trendLineChart" legendVisible="true" prefHeight="250">
                            <xAxis>
                                <CategoryAxis label="Month" fx:id="trendXAxis"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Number of Incidents" fx:id="trendYAxis"/>
                            </yAxis>
                        </LineChart>
                    </VBox>
                </GridPane>

                <!-- Top Students - Positive Recognition -->
                <VBox fx:id="topPositiveStudentsBox" spacing="15" styleClass="card, metric-success"
                      visible="false" managed="false">
                    <Label text="ðŸŒŸ Top Students - Positive Recognition" styleClass="section-title-success"/>
                    <TableView fx:id="topPositiveStudentsTable" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="topPositiveRankColumn" text="Rank" prefWidth="80"/>
                            <TableColumn fx:id="topPositiveStudentColumn" text="Student" prefWidth="250"/>
                            <TableColumn fx:id="topPositiveGradeColumn" text="Grade" prefWidth="100"/>
                            <TableColumn fx:id="topPositiveCountColumn" text="Positive Incidents" prefWidth="150"/>
                            <TableColumn fx:id="topPositiveRatioColumn" text="Positive:Negative Ratio" prefWidth="180"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Students Requiring Intervention -->
                <VBox fx:id="interventionStudentsBox" spacing="15" styleClass="card, metric-danger"
                      visible="false" managed="false">
                    <Label text="âš  Students Requiring Intervention" styleClass="section-title-danger"/>
                    <TableView fx:id="interventionStudentsTable" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="interventionRankColumn" text="Priority" prefWidth="80"/>
                            <TableColumn fx:id="interventionStudentColumn" text="Student" prefWidth="250"/>
                            <TableColumn fx:id="interventionGradeColumn" text="Grade" prefWidth="100"/>
                            <TableColumn fx:id="interventionCountColumn" text="Negative Incidents" prefWidth="150"/>
                            <TableColumn fx:id="interventionCategoryColumn" text="Most Common Category" prefWidth="200"/>
                            <TableColumn fx:id="interventionUncontactedColumn" text="Parents Uncontacted" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Detailed Incident List -->
                <VBox spacing="15" styleClass="chart-section">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Detailed Incident List" styleClass="chart-section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="searchField" promptText="Search incidents..." prefWidth="250"
                                   styleClass="search-field-padded"/>
                    </HBox>

                    <TableView fx:id="incidentsTable" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="incidentDateColumn" text="Date" prefWidth="100"/>
                            <TableColumn fx:id="incidentTimeColumn" text="Time" prefWidth="80"/>
                            <TableColumn fx:id="incidentStudentColumn" text="Student" prefWidth="200"/>
                            <TableColumn fx:id="incidentGradeColumn" text="Grade" prefWidth="80"/>
                            <TableColumn fx:id="incidentTypeColumn" text="Type" prefWidth="100"/>
                            <TableColumn fx:id="incidentCategoryColumn" text="Category" prefWidth="180"/>
                            <TableColumn fx:id="incidentSeverityColumn" text="Severity" prefWidth="100"/>
                            <TableColumn fx:id="incidentLocationColumn" text="Location" prefWidth="150"/>
                            <TableColumn fx:id="incidentTeacherColumn" text="Reported By" prefWidth="150"/>
                            <TableColumn fx:id="incidentActionsColumn" text="Actions" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label fx:id="totalRecordsLabel" text="Showing 0 records"/>
                    </HBox>
                </VBox>

                <!-- Student-Specific Summary (Conditional) -->
                <VBox fx:id="studentSummaryBox" spacing="15" styleClass="chart-section"
                      visible="false" managed="false">
                    <Label text="Student Behavior Summary" styleClass="chart-section-title"/>

                    <GridPane hgap="20" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>

                        <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Student Information" styleClass="section-header"/>
                            <HBox spacing="10">
                                <Label text="Name:" styleClass="form-label"/>
                                <Label fx:id="studentNameLabel" text="--"/>
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Grade:" styleClass="form-label"/>
                                <Label fx:id="studentGradeLabel" text="--"/>
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Student ID:" styleClass="form-label"/>
                                <Label fx:id="studentIdLabel" text="--"/>
                            </HBox>
                        </VBox>

                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Behavior Metrics" styleClass="section-header"/>
                            <HBox spacing="10">
                                <Label text="Positive:Negative Ratio:" styleClass="form-label"/>
                                <Label fx:id="behaviorRatioLabel" text="--" styleClass="text-muted"/>
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Most Common Category:" styleClass="form-label"/>
                                <Label fx:id="mostCommonCategoryLabel" text="--"/>
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Uncontacted Parent Incidents:" styleClass="form-label"/>
                                <Label fx:id="uncontactedParentLabel" text="--" styleClass="text-muted"/>
                            </HBox>
                        </VBox>
                    </GridPane>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox spacing="15" styleClass="footer-bar" alignment="CENTER_LEFT">
            <Label text="Report Date Range:" styleClass="form-label"/>
            <Label fx:id="dateRangeLabel" text="--"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="Ready" styleClass="text-muted"/>
        </HBox>
    </bottom>

</BorderPane>
