<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.ParentPortalDashboardController"
            stylesheets="@../css/application.css"
            prefWidth="1600" prefHeight="950">

    <!-- Top: Header -->
    <top>
        <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #2196f3, #1976d2); -fx-padding: 20;">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Parent Portal Dashboard"
                           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Monitor your child's academic progress, attendance, and school activities in real-time"
                           style="-fx-font-size: 13px; -fx-text-fill: white;"/>
                </VBox>

                <!-- Student Selector -->
                <VBox spacing="5" alignment="CENTER_RIGHT">
                    <Label text="Viewing Student" style="-fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                    <ComboBox fx:id="studentSelectorComboBox" promptText="Select your child..." prefWidth="250"
                              style="-fx-font-size: 13px;"/>
                </VBox>

                <!-- Parent Info -->
                <VBox spacing="3" alignment="CENTER_RIGHT" style="-fx-background-color: rgba(255,255,255,0.15); -fx-padding: 12; -fx-border-radius: 8;">
                    <Label fx:id="parentNameLabel" text="Welcome, Parent"
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label text="Last login: Today at 9:45 AM"
                           style="-fx-text-fill: white; -fx-font-size: 10px;"/>
                </VBox>
            </HBox>

            <!-- Quick Stats Bar -->
            <HBox spacing="15">
                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Current GPA" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="currentGPALabel" text="3.85"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Attendance Rate" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="attendanceRateLabel" text="96.5%"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Missing Assignments" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="missingAssignmentsLabel" text="2"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Unread Messages" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="unreadMessagesLabel" text="3"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Upcoming Events" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="upcomingEventsLabel" text="5"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Main Dashboard Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f5f5f5;">
            <VBox spacing="20" style="-fx-padding: 20;">

                <!-- Alerts & Notifications Row -->
                <HBox spacing="15">
                    <!-- Urgent Alerts -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ff5722; -fx-border-width: 2; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="âš  Alerts" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="alertCountLabel" text="2"
                                   style="-fx-background-color: #ff5722; -fx-text-fill: white; -fx-padding: 4 8; -fx-font-weight: bold; -fx-background-radius: 12;"/>
                        </HBox>
                        <ListView fx:id="alertsListView" prefHeight="150">
                            <placeholder>
                                <Label text="No alerts" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </ListView>
                    </VBox>

                    <!-- Recent Updates -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #2196f3; -fx-border-width: 2; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ”” Recent Updates" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="Last 24 hours" style="-fx-font-size: 10px; -fx-text-fill: #757575;"/>
                        </HBox>
                        <ListView fx:id="updatesListView" prefHeight="150">
                            <placeholder>
                                <Label text="No recent updates" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </ListView>
                    </VBox>
                </HBox>

                <!-- Current Grades & Progress Row -->
                <HBox spacing="15">
                    <!-- Current Course Grades -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“š Current Grades" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="View Details" onAction="#handleViewGradeDetails"
                                    style="-fx-font-size: 11px; -fx-padding: 5 10; -fx-cursor: hand;"/>
                        </HBox>

                        <TableView fx:id="gradesTableView" prefHeight="250">
                            <columns>
                                <TableColumn fx:id="courseNameColumn" text="Course" prefWidth="200"/>
                                <TableColumn fx:id="teacherColumn" text="Teacher" prefWidth="120"/>
                                <TableColumn fx:id="currentGradeColumn" text="Grade" prefWidth="70"/>
                                <TableColumn fx:id="percentageColumn" text="%" prefWidth="70"/>
                                <TableColumn fx:id="trendColumn" text="Trend" prefWidth="80"/>
                            </columns>
                            <placeholder>
                                <Label text="No grades available" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </TableView>
                    </VBox>

                    <!-- GPA Trend Chart -->
                    <VBox spacing="10" prefWidth="400"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <Label text="ðŸ“ˆ GPA Trend" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <LineChart fx:id="gpaTrendChart" prefHeight="250" legendVisible="false">
                            <xAxis>
                                <CategoryAxis label="Period" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="GPA" side="LEFT" lowerBound="0" upperBound="4.0" tickUnit="0.5"/>
                            </yAxis>
                        </LineChart>
                    </VBox>
                </HBox>

                <!-- Assignments & Attendance Row -->
                <HBox spacing="15">
                    <!-- Upcoming Assignments -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“ Upcoming Assignments" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <ComboBox fx:id="assignmentFilterComboBox" prefWidth="120">
                                <items>
                                    <String fx:value="Next 7 Days"/>
                                    <String fx:value="Next 14 Days"/>
                                    <String fx:value="Next 30 Days"/>
                                    <String fx:value="All Upcoming"/>
                                </items>
                            </ComboBox>
                        </HBox>

                        <TableView fx:id="assignmentsTableView" prefHeight="250">
                            <columns>
                                <TableColumn fx:id="assignmentCourseColumn" text="Course" prefWidth="120"/>
                                <TableColumn fx:id="assignmentNameColumn" text="Assignment" prefWidth="200"/>
                                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
                                <TableColumn fx:id="assignmentStatusColumn" text="Status" prefWidth="100"/>
                            </columns>
                            <placeholder>
                                <Label text="No upcoming assignments" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </TableView>
                    </VBox>

                    <!-- Attendance Summary -->
                    <VBox spacing="10" prefWidth="380"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <Label text="ðŸ“… Attendance Summary" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>

                            <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                  style="-fx-background-color: #e8f5e9; -fx-padding: 10; -fx-border-radius: 5;">
                                <Label text="Days Present" style="-fx-font-size: 11px; -fx-text-fill: #2e7d32;"/>
                                <Label fx:id="daysPresentLabel" text="142"
                                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                  style="-fx-background-color: #ffebee; -fx-padding: 10; -fx-border-radius: 5;">
                                <Label text="Days Absent" style="-fx-font-size: 11px; -fx-text-fill: #c62828;"/>
                                <Label fx:id="daysAbsentLabel" text="5"
                                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #c62828;"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                  style="-fx-background-color: #fff3e0; -fx-padding: 10; -fx-border-radius: 5;">
                                <Label text="Tardies" style="-fx-font-size: 11px; -fx-text-fill: #e65100;"/>
                                <Label fx:id="tardiesLabel" text="3"
                                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #e65100;"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                  style="-fx-background-color: #e3f2fd; -fx-padding: 10; -fx-border-radius: 5;">
                                <Label text="Early Dismissals" style="-fx-font-size: 11px; -fx-text-fill: #1565c0;"/>
                                <Label fx:id="earlyDismissalsLabel" text="2"
                                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                            </VBox>
                        </GridPane>

                        <PieChart fx:id="attendancePieChart" prefHeight="120" legendVisible="true" labelsVisible="false"/>
                    </VBox>
                </HBox>

                <!-- Communication & Calendar Row -->
                <HBox spacing="15">
                    <!-- Messages from Teachers -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="âœ‰ Messages from Teachers" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Compose Message" onAction="#handleComposeMessage"
                                    style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-padding: 5 12; -fx-cursor: hand;"/>
                        </HBox>

                        <ListView fx:id="messagesListView" prefHeight="200">
                            <placeholder>
                                <Label text="No messages" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </ListView>

                        <Button text="View All Messages" onAction="#handleViewAllMessages"
                                maxWidth="Infinity"
                                style="-fx-background-color: #f5f5f5; -fx-padding: 8; -fx-cursor: hand;"/>
                    </VBox>

                    <!-- School Calendar -->
                    <VBox spacing="10" prefWidth="400"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <Label text="ðŸ—“ School Calendar" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <ListView fx:id="calendarEventsListView" prefHeight="200">
                            <placeholder>
                                <Label text="No upcoming events" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </ListView>

                        <Button text="View Full Calendar" onAction="#handleViewCalendar"
                                maxWidth="Infinity"
                                style="-fx-background-color: #f5f5f5; -fx-padding: 8; -fx-cursor: hand;"/>
                    </VBox>
                </HBox>

                <!-- Quick Actions Row -->
                <HBox spacing="15">
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <Label text="âš¡ Quick Actions" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                            </columnConstraints>

                            <Button text="ðŸ“Š View Report Card" onAction="#handleViewReportCard"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="Infinity"
                                    style="-fx-background-color: #673ab7; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ’³ Make Payment" onAction="#handleMakePayment"
                                    GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"
                                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ“„ Upload Documents" onAction="#handleUploadDocuments"
                                    GridPane.columnIndex="2" GridPane.rowIndex="0" maxWidth="Infinity"
                                    style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="âš™ Update Info" onAction="#handleUpdateInfo"
                                    GridPane.columnIndex="3" GridPane.rowIndex="0" maxWidth="Infinity"
                                    style="-fx-background-color: #607d8b; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ¥ Health Records" onAction="#handleHealthRecords"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="Infinity"
                                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸšŒ Transportation" onAction="#handleTransportation"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"
                                    style="-fx-background-color: #ff5722; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ½ Meal Account" onAction="#handleMealAccount"
                                    GridPane.columnIndex="2" GridPane.rowIndex="1" maxWidth="Infinity"
                                    style="-fx-background-color: #8bc34a; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ“š Library Account" onAction="#handleLibraryAccount"
                                    GridPane.columnIndex="3" GridPane.rowIndex="1" maxWidth="Infinity"
                                    style="-fx-background-color: #00bcd4; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>
                        </GridPane>
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom: Footer -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #fafafa; -fx-padding: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Label fx:id="statusLabel" text="Dashboard loaded successfully" style="-fx-font-size: 11px;"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="lastUpdatedLabel" text="Last updated: Just now" style="-fx-font-size: 11px; -fx-text-fill: #757575;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="ðŸ”„ Refresh Dashboard" onAction="#handleRefreshDashboard"
                    style="-fx-padding: 6 15; -fx-cursor: hand;"/>
            <Button text="ðŸ“¥ Download Reports" onAction="#handleDownloadReports"
                    style="-fx-padding: 6 15; -fx-cursor: hand;"/>
            <Button text="â“ Help & Support" onAction="#handleHelp"
                    style="-fx-padding: 6 15; -fx-cursor: hand;"/>
        </HBox>
    </bottom>

</BorderPane>
