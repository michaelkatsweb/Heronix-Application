<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.AbsenceReasonsManagementController"
            prefWidth="1200" prefHeight="800">


    <!-- Top: Header -->
    <top>
        <VBox spacing="15" styleClass="card">
            <Label text="Absence Reasons &amp; Categories Management"
                   styleClass="page-title-white"/>
            <Label text="Configure custom absence reasons, categorization rules, and excuse/documentation requirements"
                   styleClass="text-white"/>
        </VBox>
    </top>

    <!-- Center: Split View -->
    <center>
        <SplitPane dividerPositions="0.4" styleClass="main-container">

            <!-- Left: Absence Reasons List -->
            <VBox spacing="15" styleClass="padding-15-white">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Absence Reasons" styleClass="section-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="+ Add New" onAction="#handleAddReason"
                            styleClass="button-primary"/>
                </HBox>

                <TextField fx:id="searchField" promptText="Search reasons..."/>

                <TableView fx:id="reasonsTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="codeColumn" text="Code" prefWidth="80"/>
                        <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="180"/>
                        <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120"/>
                        <TableColumn fx:id="excusedColumn" text="Excused" prefWidth="80"/>
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="80"/>
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Label text="Total Reasons:" styleClass="form-label"/>
                    <Label fx:id="totalReasonsLabel" text="0"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="Excused:" styleClass="form-label"/>
                    <Label fx:id="excusedCountLabel" text="0"/>
                    <Label text="Unexcused:" styleClass="form-label"/>
                    <Label fx:id="unexcusedCountLabel" text="0"/>
                </HBox>
            </VBox>

            <!-- Right: Reason Details -->
            <ScrollPane fitToWidth="true" styleClass="main-container">
                <VBox spacing="25" styleClass="content-padding-25">

                    <!-- Basic Information -->
                    <VBox spacing="15" styleClass="form-section-white, card-bordered">
                        <Label text="Basic Information" styleClass="section-title"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30"/>
                                <ColumnConstraints percentWidth="70"/>
                            </columnConstraints>

                            <Label text="Code:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="reasonCodeField" promptText="e.g., ILL, DOC, FUN" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Description:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="reasonDescriptionField" promptText="Brief description" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Long Description:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <TextArea fx:id="longDescriptionArea" promptText="Detailed description for reports and communications" wrapText="true" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Active:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <CheckBox fx:id="activeCheckBox" text="Reason is active and available for use" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>
                    </VBox>

                    <!-- Categorization -->
                    <VBox spacing="15" styleClass="card, metric-warning">
                        <Label text="Categorization" styleClass="section-title-orange-amber"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30"/>
                                <ColumnConstraints percentWidth="70"/>
                            </columnConstraints>

                            <Label text="Category:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <ComboBox fx:id="categoryComboBox" promptText="Select category..." maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Excused/Unexcused:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <RadioButton fx:id="excusedRadio" text="Excused" toggleGroup="$excuseGroup" selected="true"/>
                                <RadioButton fx:id="unexcusedRadio" text="Unexcused" toggleGroup="$excuseGroup"/>
                            </HBox>

                            <Label text="Counts Toward Truancy:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <CheckBox fx:id="countsTowardTruancyCheckBox" text="Include in truancy calculations" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Affects Attendance Rate:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <CheckBox fx:id="affectsAttendanceRateCheckBox" text="Include in attendance percentage" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>
                    </VBox>

                    <!-- Documentation Requirements -->
                    <VBox spacing="15" styleClass="card, metric-info">
                        <Label text="Documentation Requirements" styleClass="section-title-cyan-dark"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30"/>
                                <ColumnConstraints percentWidth="70"/>
                            </columnConstraints>

                            <Label text="Requires Documentation:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <CheckBox fx:id="requiresDocumentationCheckBox" text="Documentation required to excuse" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Document Type Required:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="documentTypeField" promptText="e.g., Doctor's Note, Court Order" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Max Days Without Docs:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <TextField fx:id="maxDaysWithoutDocsField" promptText="Days" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Auto-Approve if Documented:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <CheckBox fx:id="autoApproveCheckBox" text="Automatically excuse when documentation provided" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>
                    </VBox>

                    <!-- State Reporting -->
                    <VBox spacing="15" styleClass="form-section-white, card-bordered">
                        <Label text="State Reporting" styleClass="section-title"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30"/>
                                <ColumnConstraints percentWidth="70"/>
                            </columnConstraints>

                            <Label text="State Code:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="stateCodeField" promptText="State-specific reporting code" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Federal Code:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="federalCodeField" promptText="Federal reporting code" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Include in State Reports:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <CheckBox fx:id="includeInStateReportsCheckBox" text="Report to state" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Chronic Absence Indicator:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <CheckBox fx:id="chronicAbsenceIndicatorCheckBox" text="Counts toward chronic absenteeism" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>
                    </VBox>

                    <!-- Notifications & Actions -->
                    <VBox spacing="15" styleClass="card, metric-danger">
                        <Label text="Notifications &amp; Automated Actions" styleClass="section-title-danger"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30"/>
                                <ColumnConstraints percentWidth="70"/>
                            </columnConstraints>

                            <Label text="Notify Parents:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <CheckBox fx:id="notifyParentsCheckBox" text="Send automatic notification to parents" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Notify Administration:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <CheckBox fx:id="notifyAdministrationCheckBox" text="Alert administration for this reason" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Notification Template:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <ComboBox fx:id="notificationTemplateComboBox" promptText="Select template..." maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Trigger Intervention:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <CheckBox fx:id="triggerInterventionCheckBox" text="Create intervention plan after threshold" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>
                    </VBox>

                    <!-- Additional Settings -->
                    <VBox spacing="15" styleClass="form-section-white, card-bordered">
                        <Label text="Additional Settings" styleClass="section-title"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30"/>
                                <ColumnConstraints percentWidth="70"/>
                            </columnConstraints>

                            <Label text="Display Order:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="displayOrderField" promptText="Sort order (lower = first)" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Color Code:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <ColorPicker fx:id="colorPicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Icon/Symbol:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <TextField fx:id="iconField" promptText="Icon name or symbol" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Notes:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <TextArea fx:id="notesArea" promptText="Internal notes about this reason" wrapText="true" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>
                    </VBox>

                </VBox>
            </ScrollPane>

        </SplitPane>
    </center>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="footer-border-top">
            <Button fx:id="saveButton" text="Save Reason" onAction="#handleSave"
                    styleClass="button-primary"/>
            <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete"
                    styleClass="header-danger"/>
            <Button fx:id="clearButton" text="Clear Form" onAction="#handleClear"
                    styleClass="button-primary"/>
        </HBox>
    </bottom>

</BorderPane>
