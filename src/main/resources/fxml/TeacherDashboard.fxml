<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.TeacherDashboardController"
            prefWidth="1700" prefHeight="950">


    <!-- Top: Header -->
    <top>
        <VBox spacing="15" styleClass="header-gradient">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Teacher Dashboard"
                           styleClass="page-title-white"/>
                    <Label fx:id="teacherNameLabel" text="Welcome, Ms. Rodriguez"
                           styleClass="text-white"/>
                </VBox>

                <!-- Period Selector -->
                <VBox spacing="5" alignment="CENTER_RIGHT">
                    <Label text="Current Period" styleClass="text-white"/>
                    <ComboBox fx:id="periodSelectorComboBox" promptText="Select period..." prefWidth="280"
                              styleClass="input-13"/>
                </VBox>

                <!-- Quick Actions -->
                <VBox spacing="5" alignment="CENTER_RIGHT">
                    <Button text="ðŸ“‹ Take Attendance" onAction="#handleTakeAttendance"
                            styleClass="button-primary"/>
                    <Button text="ðŸ“ Enter Grades" onAction="#handleEnterGrades"
                            styleClass="button-primary"/>
                </VBox>
            </HBox>

            <!-- Today's Schedule & Stats -->
            <HBox spacing="15">
                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Today's Classes" styleClass="text-white"/>
                    <Label fx:id="todaysClassesLabel" text="6"
                           styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Total Students" styleClass="text-white"/>
                    <Label fx:id="totalStudentsLabel" text="142"
                           styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Grades to Post" styleClass="text-white"/>
                    <Label fx:id="gradesToPostLabel" text="23"
                           styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Unread Messages" styleClass="text-white"/>
                    <Label fx:id="unreadMessagesLabel" text="7"
                           styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Attendance Rate" styleClass="text-white"/>
                    <Label fx:id="attendanceRateLabel" text="94.8%"
                           styleClass="text-white"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Main Dashboard Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="main-container">
            <VBox spacing="20" style="-fx-padding: 20;">

                <!-- Today's Schedule & Alerts Row -->
                <HBox spacing="15">
                    <!-- Today's Schedule -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-bordered">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ• Today's Schedule" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="currentTimeLabel" text="10:45 AM"
                                   styleClass="text-muted"/>
                        </HBox>

                        <ListView fx:id="scheduleListView" prefHeight="200">
                            <placeholder>
                                <Label text="No classes today" styleClass="text-muted"/>
                            </placeholder>
                        </ListView>
                    </VBox>

                    <!-- Action Items -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-border-orange">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="âš¡ Action Items" styleClass="section-title-action-orange"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="actionItemsCountLabel" text="5"
                                   styleClass="button-primary"/>
                        </HBox>

                        <ListView fx:id="actionItemsListView" prefHeight="200">
                            <placeholder>
                                <Label text="No action items" styleClass="text-muted"/>
                            </placeholder>
                        </ListView>
                    </VBox>
                </HBox>

                <!-- Current Class Overview -->
                <VBox spacing="10"
                      styleClass="card-white-bordered">
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="ðŸ‘¥ Current Class Overview" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="classInfoLabel" text="No class selected" styleClass="text-muted"/>
                        <Button text="View Roster" onAction="#handleViewRoster"
                                styleClass="button-view-roster"/>
                    </HBox>

                    <HBox spacing="15">
                        <!-- Student List -->
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Students" styleClass="form-label"/>
                                <TextField fx:id="studentSearchField" promptText="Search students..." prefWidth="200"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <ComboBox fx:id="studentFilterComboBox" prefWidth="150">
                                    <items>
                                        <String fx:value="All Students"/>
                                        <String fx:value="Present Today"/>
                                        <String fx:value="Absent Today"/>
                                        <String fx:value="Struggling (D/F)"/>
                                        <String fx:value="Excelling (A)"/>
                                    </items>
                                </ComboBox>
                            </HBox>

                            <TableView fx:id="studentsTableView" prefHeight="250">
                                <columns>
                                    <TableColumn fx:id="studentNameColumn" text="Name" prefWidth="150"/>
                                    <TableColumn fx:id="studentIdColumn" text="ID" prefWidth="80"/>
                                    <TableColumn fx:id="currentGradeColumn" text="Grade" prefWidth="60"/>
                                    <TableColumn fx:id="attendanceColumn" text="Attendance" prefWidth="90"/>
                                    <TableColumn fx:id="lastAssignmentColumn" text="Last Assignment" prefWidth="120"/>
                                    <TableColumn fx:id="participationColumn" text="Participation" prefWidth="100"/>
                                </columns>
                                <placeholder>
                                    <Label text="No students" styleClass="text-muted"/>
                                </placeholder>
                            </TableView>
                        </VBox>

                        <!-- Class Statistics -->
                        <VBox spacing="10" prefWidth="320"
                              styleClass="card">
                            <Label text="Class Statistics" styleClass="label-14-bold"/>

                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="50"/>
                                    <ColumnConstraints percentWidth="50"/>
                                </columnConstraints>

                                <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                      styleClass="card, metric-success">
                                    <Label text="Class Average" styleClass="text-muted"/>
                                    <Label fx:id="classAverageLabel" text="87.3%"
                                           styleClass="stat-value-20-green-bright"/>
                                </VBox>

                                <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                      styleClass="card, metric-info">
                                    <Label text="Present Today" styleClass="text-muted"/>
                                    <Label fx:id="presentTodayLabel" text="22 / 24"
                                           styleClass="stat-value-20-blue-bright"/>
                                </VBox>

                                <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                      styleClass="card, metric-warning">
                                    <Label text="Missing Work" styleClass="text-muted"/>
                                    <Label fx:id="missingWorkLabel" text="8"
                                           styleClass="stat-value-20-orange-bright"/>
                                </VBox>

                                <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                      styleClass="card, metric-danger">
                                    <Label text="At Risk (D/F)" styleClass="text-muted"/>
                                    <Label fx:id="atRiskLabel" text="3"
                                           styleClass="stat-value-20-red-bright"/>
                                </VBox>
                            </GridPane>

                            <Label text="Grade Distribution" styleClass="label-12-bold-padded"/>
                            <BarChart fx:id="gradeDistributionChart" prefHeight="150" legendVisible="false">
                                <xAxis>
                                    <CategoryAxis side="BOTTOM"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis side="LEFT" label="Students"/>
                                </yAxis>
                            </BarChart>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Assignments & Lesson Plans Row -->
                <HBox spacing="15">
                    <!-- Recent Assignments -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-bordered">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“š Assignments" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="+ Create Assignment" onAction="#handleCreateAssignment"
                                    styleClass="button-primary"/>
                        </HBox>

                        <TableView fx:id="assignmentsTableView" prefHeight="220">
                            <columns>
                                <TableColumn fx:id="assignmentNameColumn" text="Assignment" prefWidth="200"/>
                                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
                                <TableColumn fx:id="submittedColumn" text="Submitted" prefWidth="80"/>
                                <TableColumn fx:id="gradedColumn" text="Graded" prefWidth="80"/>
                                <TableColumn fx:id="averageScoreColumn" text="Avg Score" prefWidth="80"/>
                            </columns>
                            <placeholder>
                                <Label text="No assignments" styleClass="text-muted"/>
                            </placeholder>
                        </TableView>
                    </VBox>

                    <!-- Lesson Plans -->
                    <VBox spacing="10" prefWidth="450"
                          styleClass="card-white-bordered">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“– Lesson Plans" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="+ New Lesson" onAction="#handleNewLesson"
                                    styleClass="button-primary"/>
                        </HBox>

                        <ListView fx:id="lessonPlansListView" prefHeight="220">
                            <placeholder>
                                <Label text="No lesson plans" styleClass="text-muted"/>
                            </placeholder>
                        </ListView>
                    </VBox>
                </HBox>

                <!-- Communication & Resources Row -->
                <HBox spacing="15">
                    <!-- Messages -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-bordered">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="âœ‰ Messages" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Compose" onAction="#handleComposeMessage"
                                    styleClass="button-primary"/>
                        </HBox>

                        <ListView fx:id="messagesListView" prefHeight="180">
                            <placeholder>
                                <Label text="No messages" styleClass="text-muted"/>
                            </placeholder>
                        </ListView>
                    </VBox>

                    <!-- Quick Resources -->
                    <VBox spacing="10" prefWidth="380"
                          styleClass="card-white-bordered">
                        <Label text="ðŸ”§ Quick Resources" styleClass="section-title"/>

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>

                            <Button text="ðŸ“Š Grade Reports" onAction="#handleGradeReports"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸ“… Calendar" onAction="#handleCalendar"
                                    GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸ“‹ Forms &amp; Templates" onAction="#handleForms"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸ“– Curriculum" onAction="#handleCurriculum"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸŽ¯ Standards" onAction="#handleStandards"
                                    GridPane.columnIndex="0" GridPane.rowIndex="2" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸ’¡ Resources Library" onAction="#handleResourcesLibrary"
                                    GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity"
                                    styleClass="button-primary"/>
                        </GridPane>
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom: Footer -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT"
              styleClass="card">
            <Label fx:id="statusLabel" text="Dashboard ready" styleClass="status-label-11"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="lastUpdatedLabel" text="Last updated: Just now" styleClass="text-muted"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                    styleClass="button-footer-6-15"/>
            <Button text="âš™ Settings" onAction="#handleSettings"
                    styleClass="button-footer-6-15"/>
            <Button text="â“ Help" onAction="#handleHelp"
                    styleClass="button-footer-6-15"/>
        </HBox>
    </bottom>

</BorderPane>
