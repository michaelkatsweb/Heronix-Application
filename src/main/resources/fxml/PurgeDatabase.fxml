<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!--
    Purge Database Confirmation Dialog
    Location: src/main/resources/fxml/PurgeDatabase.fxml

    Nuclear option - Deletes ALL data from database
    Requires confirmation before proceeding
-->
<VBox xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.heronix.ui.controller.PurgeDatabaseController"
    spacing="20"
    styleClass="wizard-card">

    <!-- Warning Icon and Title -->
    <VBox alignment="CENTER" spacing="15">
        <Label text="⚠️" styleClass="text-muted" />
        <Label text="PURGE DATABASE" styleClass="header-24-danger" />
        <Label text="WARNING: This action is IRREVERSIBLE!" styleClass="header-14-danger-deep" />
    </VBox>

    <Separator />

    <!-- Warning Message -->
    <VBox spacing="12" styleClass="card, metric-danger">
        <Label text="This operation will DELETE ALL DATA from the database:"
            styleClass="header-14-danger-dark" />

        <VBox spacing="8" style="-fx-padding: 0 0 0 20;">
            <Label text="❌ All Teachers and certifications" styleClass="text-muted" />
            <Label text="❌ All Students and enrollments" styleClass="text-muted" />
            <Label text="❌ All Courses and prerequisites" styleClass="text-muted" />
            <Label text="❌ All Rooms and equipment" styleClass="text-muted" />
            <Label text="❌ All Schedules and assignments" styleClass="text-muted" />
            <Label text="❌ All Events and conflicts" styleClass="text-muted" />
            <Label text="❌ All Substitutes, Paraprofessionals, Co-Teachers" styleClass="text-muted" />
        </VBox>

        <Label text="⚠️ User accounts will NOT be deleted (only data)"
            styleClass="text-hint-italic" />
    </VBox>

    <!-- Use Cases -->
    <VBox spacing="10" styleClass="card, metric-info">
        <Label text="ℹ️ When to use this:" styleClass="form-label" />
        <VBox spacing="5" style="-fx-padding: 0 0 0 20;">
            <Label text="• Testing CSV imports with fresh data" styleClass="text-muted" />
            <Label text="• Starting a new school year" styleClass="text-muted" />
            <Label text="• Clearing test/demo data before production use" styleClass="text-muted" />
            <Label text="• Fixing corrupted data issues" styleClass="text-muted" />
        </VBox>
    </VBox>

    <!-- Confirmation Section -->
    <VBox spacing="15">
        <Label text="To confirm, type: DELETE ALL DATA"
            styleClass="header-13-dark" />

        <TextField fx:id="confirmationField" promptText="Type here to confirm..."
            styleClass="input-danger-border" />

        <CheckBox fx:id="confirmCheckbox" text="I understand this action cannot be undone"
            styleClass="form-label" />

        <Label fx:id="errorLabel" text="" styleClass="form-label" visible="false" />
    </VBox>

    <Separator />

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="❌ PURGE DATABASE" onAction="#handlePurge" fx:id="purgeButton"
            disable="true"
            styleClass="button-danger">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Button>

        <Button text="✅ Cancel (Safe)" onAction="#handleCancel"
            styleClass="button-success">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Button>
    </HBox>

    <!-- Progress Indicator (hidden by default) -->
    <VBox fx:id="progressContainer" spacing="10" alignment="CENTER" visible="false" style="-fx-padding: 20;">
        <ProgressBar fx:id="progressBar" prefWidth="400" />
        <Label fx:id="progressLabel" text="Purging database..." styleClass="form-label" />
    </VBox>

</VBox>
