<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.StudentDashboardController"
            >


    <!-- Top: Header -->
    <top>
        <VBox spacing="15" styleClass="header-gradient">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Student Dashboard"
                           styleClass="page-title-white"/>
                    <Label fx:id="studentNameLabel" text="Welcome back, Emma Anderson"
                           styleClass="text-white"/>
                    <Label fx:id="studentInfoLabel" text="Grade 10 â€¢ Student ID: S002045"
                           styleClass="label-12-white-80"/>
                </VBox>

                <!-- Current Time & Date -->
                <VBox spacing="3" alignment="CENTER_RIGHT" styleClass="card-transparent">
                    <Label fx:id="currentTimeLabel" text="10:45 AM"
                           styleClass="text-white"/>
                    <Label fx:id="currentDateLabel" text="Friday, December 6, 2024"
                           styleClass="text-white"/>
                </VBox>
            </HBox>

            <!-- Quick Stats Bar -->
            <HBox spacing="15">
                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Current GPA" styleClass="text-white"/>
                    <Label fx:id="currentGPALabel" text="3.72"
                           styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Attendance Rate" styleClass="text-white"/>
                    <Label fx:id="attendanceRateLabel" text="97.2%"
                           styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Credits Earned" styleClass="text-white"/>
                    <Label fx:id="creditsEarnedLabel" text="18 / 24"
                           styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Assignments Due" styleClass="text-white"/>
                    <Label fx:id="assignmentsDueLabel" text="3"
                           styleClass="text-white"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      styleClass="card-transparent">
                    <Label text="Missing Work" styleClass="text-white"/>
                    <Label fx:id="missingWorkLabel" text="0"
                           styleClass="text-white"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Main Dashboard Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="main-container">
            <VBox spacing="20" styleClass="padding-20">

                <!-- Today's Schedule & Next Class Row -->
                <HBox spacing="15">
                    <!-- Today's Schedule -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-bordered">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“… Today's Schedule" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="scheduleStatusLabel" text="Period 3 in progress"
                                   styleClass="text-muted"/>
                        </HBox>

                        <ListView fx:id="scheduleListView" prefHeight="250">
                            <placeholder>
                                <Label text="No classes today" styleClass="text-muted"/>
                            </placeholder>
                        </ListView>
                    </VBox>

                    <!-- Next Class & Quick Info -->
                    <VBox spacing="15" prefWidth="380"
                          styleClass="card-white-bordered">

                        <!-- Next Class -->
                        <VBox spacing="8"
                              styleClass="card">
                            <Label text="â° Next Class" styleClass="label-14-bold-primary"/>
                            <Label fx:id="nextClassNameLabel" text="US History"
                                   styleClass="section-title"/>
                            <Label fx:id="nextClassInfoLabel" text="Room 305 â€¢ Mr. Davis"
                                   styleClass="text-muted"/>
                            <Label fx:id="nextClassTimeLabel" text="Starts in 15 minutes (11:00 AM)"
                                   styleClass="text-muted"/>
                        </VBox>

                        <!-- Quick Stats -->
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>

                            <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                  styleClass="card, metric-success">
                                <Label text="Class Rank" styleClass="text-muted"/>
                                <Label fx:id="classRankLabel" text="23 / 350"
                                       styleClass="stat-value-18-green"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                  styleClass="card, metric-warning">
                                <Label text="Honor Roll" styleClass="text-muted"/>
                                <Label text="Yes"
                                       styleClass="stat-value-18-orange"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                  styleClass="card, metric-info">
                                <Label text="Tardy Count" styleClass="text-muted"/>
                                <Label fx:id="tardyCountLabel" text="2"
                                       styleClass="stat-value-18-blue"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                  styleClass="card">
                                <Label text="Clubs" styleClass="text-muted"/>
                                <Label fx:id="clubsLabel" text="3"
                                       styleClass="stat-value-18-purple"/>
                            </VBox>
                        </GridPane>
                    </VBox>
                </HBox>

                <!-- Current Grades & GPA Trend Row -->
                <HBox spacing="15">
                    <!-- Current Grades -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-bordered">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“Š Current Grades" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="View Report Card" onAction="#handleViewReportCard"
                                    styleClass="button-small-cursor"/>
                        </HBox>

                        <TableView fx:id="gradesTableView" prefHeight="250">
                            <columns>
                                <TableColumn fx:id="courseNameColumn" text="Course" prefWidth="200"/>
                                <TableColumn fx:id="teacherColumn" text="Teacher" prefWidth="120"/>
                                <TableColumn fx:id="periodColumn" text="Period" prefWidth="60"/>
                                <TableColumn fx:id="currentGradeColumn" text="Grade" prefWidth="60"/>
                                <TableColumn fx:id="percentageColumn" text="%" prefWidth="60"/>
                                <TableColumn fx:id="creditsColumn" text="Credits" prefWidth="60"/>
                            </columns>
                            <placeholder>
                                <Label text="No grades available" styleClass="text-muted"/>
                            </placeholder>
                        </TableView>
                    </VBox>

                    <!-- Progress Charts -->
                    <VBox spacing="15" prefWidth="400"
                          styleClass="card-white-bordered">
                        <Label text="ðŸ“ˆ Academic Progress" styleClass="section-title"/>

                        <LineChart fx:id="gpaProgressChart" prefHeight="120" legendVisible="false">
                            <xAxis>
                                <CategoryAxis label="Quarter" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="GPA" side="LEFT" lowerBound="0" upperBound="4.0" tickUnit="0.5"/>
                            </yAxis>
                        </LineChart>

                        <Label text="Credit Progress" styleClass="label-12-bold-progress"/>
                        <ProgressBar fx:id="creditProgressBar" prefWidth="Infinity" progress="0.75" styleClass="progress-bar-green"/>
                        <Label fx:id="creditProgressLabel" text="18 of 24 credits earned (75%)"
                               styleClass="text-muted"/>
                    </VBox>
                </HBox>

                <!-- Assignments & Calendar Row -->
                <HBox spacing="15">
                    <!-- Upcoming Assignments -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-bordered">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“ Assignments" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <ComboBox fx:id="assignmentFilterComboBox" prefWidth="150">
                                <items>
                                    <String fx:value="All Assignments"/>
                                    <String fx:value="Due This Week"/>
                                    <String fx:value="Due Today"/>
                                    <String fx:value="Missing"/>
                                    <String fx:value="Completed"/>
                                </items>
                            </ComboBox>
                        </HBox>

                        <TableView fx:id="assignmentsTableView" prefHeight="220">
                            <columns>
                                <TableColumn fx:id="assignmentCourseColumn" text="Course" prefWidth="120"/>
                                <TableColumn fx:id="assignmentNameColumn" text="Assignment" prefWidth="200"/>
                                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
                                <TableColumn fx:id="assignmentStatusColumn" text="Status" prefWidth="100"/>
                                <TableColumn fx:id="scoreColumn" text="Score" prefWidth="80"/>
                            </columns>
                            <placeholder>
                                <Label text="No assignments" styleClass="text-muted"/>
                            </placeholder>
                        </TableView>
                    </VBox>

                    <!-- Calendar & Events -->
                    <VBox spacing="10" prefWidth="400"
                          styleClass="card-white-bordered">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ—“ Upcoming Events" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="eventsCountLabel" text="5 events"
                                   styleClass="text-muted"/>
                        </HBox>

                        <ListView fx:id="eventsListView" prefHeight="220">
                            <placeholder>
                                <Label text="No upcoming events" styleClass="text-muted"/>
                            </placeholder>
                        </ListView>
                    </VBox>
                </HBox>

                <!-- Resources & Activities Row -->
                <HBox spacing="15">
                    <!-- My Resources -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-bordered">
                        <Label text="ðŸ“š My Resources" styleClass="section-title"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                            </columnConstraints>

                            <Button text="ðŸ“– Library Account" onAction="#handleLibraryAccount"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸ½ Meal Balance" onAction="#handleMealBalance"
                                    GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸšŒ Bus Schedule" onAction="#handleBusSchedule"
                                    GridPane.columnIndex="2" GridPane.rowIndex="0" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸ¥ Health Records" onAction="#handleHealthRecords"
                                    GridPane.columnIndex="3" GridPane.rowIndex="0" maxWidth="Infinity"
                                    styleClass="header-danger"/>

                            <Button text="ðŸ“§ Messages" onAction="#handleMessages"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸŽ“ Transcripts" onAction="#handleTranscripts"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"
                                    styleClass="button-primary"/>

                            <Button text="ðŸŽ¯ Clubs & Activities" onAction="#handleClubsActivities"
                                    GridPane.columnIndex="2" GridPane.rowIndex="1" maxWidth="Infinity"
                                    styleClass="header-purple"/>

                            <Button text="ðŸ’³ Fees & Payments" onAction="#handleFeesPayments"
                                    GridPane.columnIndex="3" GridPane.rowIndex="1" maxWidth="Infinity"
                                    styleClass="button-primary"/>
                        </GridPane>
                    </VBox>
                </HBox>

                <!-- Announcements & Achievements Row -->
                <HBox spacing="15">
                    <!-- School Announcements -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          styleClass="card-white-bordered">
                        <Label text="ðŸ“¢ School Announcements" styleClass="section-title"/>

                        <ListView fx:id="announcementsListView" prefHeight="150">
                            <placeholder>
                                <Label text="No announcements" styleClass="text-muted"/>
                            </placeholder>
                        </ListView>
                    </VBox>

                    <!-- My Achievements -->
                    <VBox spacing="10" prefWidth="450"
                          styleClass="card-white-bordered">
                        <Label text="ðŸ† My Achievements" styleClass="section-title"/>

                        <ListView fx:id="achievementsListView" prefHeight="150">
                            <placeholder>
                                <Label text="No achievements yet" styleClass="text-muted"/>
                            </placeholder>
                        </ListView>
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom: Footer -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT"
              styleClass="card">
            <Label fx:id="statusLabel" text="Dashboard loaded" styleClass="label-11-status"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="lastUpdatedLabel" text="Last updated: Just now" styleClass="text-muted"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                    styleClass="button-footer"/>
            <Button text="â“ Help" onAction="#handleHelp"
                    styleClass="button-footer"/>
        </HBox>
    </bottom>

</BorderPane>
