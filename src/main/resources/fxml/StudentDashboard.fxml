<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.StudentDashboardController"
            stylesheets="@../css/application.css"
            prefWidth="1600" prefHeight="950">

    <!-- Top: Header -->
    <top>
        <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #9c27b0, #7b1fa2); -fx-padding: 20;">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Student Dashboard"
                           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label fx:id="studentNameLabel" text="Welcome back, Emma Anderson"
                           style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                    <Label fx:id="studentInfoLabel" text="Grade 10 â€¢ Student ID: S002045"
                           style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                </VBox>

                <!-- Current Time & Date -->
                <VBox spacing="3" alignment="CENTER_RIGHT" style="-fx-background-color: rgba(255,255,255,0.15); -fx-padding: 12; -fx-border-radius: 8;">
                    <Label fx:id="currentTimeLabel" text="10:45 AM"
                           style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                    <Label fx:id="currentDateLabel" text="Friday, December 6, 2024"
                           style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                </VBox>
            </HBox>

            <!-- Quick Stats Bar -->
            <HBox spacing="15">
                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Current GPA" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="currentGPALabel" text="3.72"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Attendance Rate" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="attendanceRateLabel" text="97.2%"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Credits Earned" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="creditsEarnedLabel" text="18 / 24"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Assignments Due" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="assignmentsDueLabel" text="3"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="3" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12; -fx-border-radius: 5;">
                    <Label text="Missing Work" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="missingWorkLabel" text="0"
                           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Main Dashboard Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f5f5f5;">
            <VBox spacing="20" style="-fx-padding: 20;">

                <!-- Today's Schedule & Next Class Row -->
                <HBox spacing="15">
                    <!-- Today's Schedule -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“… Today's Schedule" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="scheduleStatusLabel" text="Period 3 in progress"
                                   style="-fx-font-size: 11px; -fx-text-fill: #757575;"/>
                        </HBox>

                        <ListView fx:id="scheduleListView" prefHeight="250">
                            <placeholder>
                                <Label text="No classes today" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </ListView>
                    </VBox>

                    <!-- Next Class & Quick Info -->
                    <VBox spacing="15" prefWidth="380"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">

                        <!-- Next Class -->
                        <VBox spacing="8"
                              style="-fx-background-color: #e8eaf6; -fx-padding: 15; -fx-border-radius: 5; -fx-border-color: #3f51b5; -fx-border-width: 2;">
                            <Label text="â° Next Class" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3f51b5;"/>
                            <Label fx:id="nextClassNameLabel" text="US History"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            <Label fx:id="nextClassInfoLabel" text="Room 305 â€¢ Mr. Davis"
                                   style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
                            <Label fx:id="nextClassTimeLabel" text="Starts in 15 minutes (11:00 AM)"
                                   style="-fx-font-size: 13px; -fx-text-fill: #f44336; -fx-font-weight: bold;"/>
                        </VBox>

                        <!-- Quick Stats -->
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>

                            <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                  style="-fx-background-color: #e8f5e9; -fx-padding: 10; -fx-border-radius: 5;">
                                <Label text="Class Rank" style="-fx-font-size: 10px; -fx-text-fill: #2e7d32;"/>
                                <Label fx:id="classRankLabel" text="23 / 350"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                  style="-fx-background-color: #fff3e0; -fx-padding: 10; -fx-border-radius: 5;">
                                <Label text="Honor Roll" style="-fx-font-size: 10px; -fx-text-fill: #e65100;"/>
                                <Label text="Yes"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e65100;"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                  style="-fx-background-color: #e3f2fd; -fx-padding: 10; -fx-border-radius: 5;">
                                <Label text="Tardy Count" style="-fx-font-size: 10px; -fx-text-fill: #1565c0;"/>
                                <Label fx:id="tardyCountLabel" text="2"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                            </VBox>

                            <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                  style="-fx-background-color: #f3e5f5; -fx-padding: 10; -fx-border-radius: 5;">
                                <Label text="Clubs" style="-fx-font-size: 10px; -fx-text-fill: #6a1b9a;"/>
                                <Label fx:id="clubsLabel" text="3"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #6a1b9a;"/>
                            </VBox>
                        </GridPane>
                    </VBox>
                </HBox>

                <!-- Current Grades & GPA Trend Row -->
                <HBox spacing="15">
                    <!-- Current Grades -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“Š Current Grades" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="View Report Card" onAction="#handleViewReportCard"
                                    style="-fx-padding: 6 12; -fx-cursor: hand;"/>
                        </HBox>

                        <TableView fx:id="gradesTableView" prefHeight="250">
                            <columns>
                                <TableColumn fx:id="courseNameColumn" text="Course" prefWidth="200"/>
                                <TableColumn fx:id="teacherColumn" text="Teacher" prefWidth="120"/>
                                <TableColumn fx:id="periodColumn" text="Period" prefWidth="60"/>
                                <TableColumn fx:id="currentGradeColumn" text="Grade" prefWidth="60"/>
                                <TableColumn fx:id="percentageColumn" text="%" prefWidth="60"/>
                                <TableColumn fx:id="creditsColumn" text="Credits" prefWidth="60"/>
                            </columns>
                            <placeholder>
                                <Label text="No grades available" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </TableView>
                    </VBox>

                    <!-- Progress Charts -->
                    <VBox spacing="15" prefWidth="400"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <Label text="ðŸ“ˆ Academic Progress" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <LineChart fx:id="gpaProgressChart" prefHeight="120" legendVisible="false">
                            <xAxis>
                                <CategoryAxis label="Quarter" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="GPA" side="LEFT" lowerBound="0" upperBound="4.0" tickUnit="0.5"/>
                            </yAxis>
                        </LineChart>

                        <Label text="Credit Progress" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                        <ProgressBar fx:id="creditProgressBar" prefWidth="Infinity" progress="0.75" style="-fx-accent: #4caf50;"/>
                        <Label fx:id="creditProgressLabel" text="18 of 24 credits earned (75%)"
                               style="-fx-font-size: 11px; -fx-text-fill: #757575;"/>
                    </VBox>
                </HBox>

                <!-- Assignments & Calendar Row -->
                <HBox spacing="15">
                    <!-- Upcoming Assignments -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“ Assignments" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <ComboBox fx:id="assignmentFilterComboBox" prefWidth="150">
                                <items>
                                    <String fx:value="All Assignments"/>
                                    <String fx:value="Due This Week"/>
                                    <String fx:value="Due Today"/>
                                    <String fx:value="Missing"/>
                                    <String fx:value="Completed"/>
                                </items>
                            </ComboBox>
                        </HBox>

                        <TableView fx:id="assignmentsTableView" prefHeight="220">
                            <columns>
                                <TableColumn fx:id="assignmentCourseColumn" text="Course" prefWidth="120"/>
                                <TableColumn fx:id="assignmentNameColumn" text="Assignment" prefWidth="200"/>
                                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
                                <TableColumn fx:id="assignmentStatusColumn" text="Status" prefWidth="100"/>
                                <TableColumn fx:id="scoreColumn" text="Score" prefWidth="80"/>
                            </columns>
                            <placeholder>
                                <Label text="No assignments" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </TableView>
                    </VBox>

                    <!-- Calendar & Events -->
                    <VBox spacing="10" prefWidth="400"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ—“ Upcoming Events" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="eventsCountLabel" text="5 events"
                                   style="-fx-font-size: 11px; -fx-text-fill: #757575;"/>
                        </HBox>

                        <ListView fx:id="eventsListView" prefHeight="220">
                            <placeholder>
                                <Label text="No upcoming events" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </ListView>
                    </VBox>
                </HBox>

                <!-- Resources & Activities Row -->
                <HBox spacing="15">
                    <!-- My Resources -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <Label text="ðŸ“š My Resources" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="25"/>
                            </columnConstraints>

                            <Button text="ðŸ“– Library Account" onAction="#handleLibraryAccount"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="Infinity"
                                    style="-fx-background-color: #00bcd4; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ½ Meal Balance" onAction="#handleMealBalance"
                                    GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"
                                    style="-fx-background-color: #8bc34a; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸšŒ Bus Schedule" onAction="#handleBusSchedule"
                                    GridPane.columnIndex="2" GridPane.rowIndex="0" maxWidth="Infinity"
                                    style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ¥ Health Records" onAction="#handleHealthRecords"
                                    GridPane.columnIndex="3" GridPane.rowIndex="0" maxWidth="Infinity"
                                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ“§ Messages" onAction="#handleMessages"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="Infinity"
                                    style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸŽ“ Transcripts" onAction="#handleTranscripts"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"
                                    style="-fx-background-color: #673ab7; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸŽ¯ Clubs & Activities" onAction="#handleClubsActivities"
                                    GridPane.columnIndex="2" GridPane.rowIndex="1" maxWidth="Infinity"
                                    style="-fx-background-color: #9c27b0; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>

                            <Button text="ðŸ’³ Fees & Payments" onAction="#handleFeesPayments"
                                    GridPane.columnIndex="3" GridPane.rowIndex="1" maxWidth="Infinity"
                                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 15; -fx-cursor: hand;"/>
                        </GridPane>
                    </VBox>
                </HBox>

                <!-- Announcements & Achievements Row -->
                <HBox spacing="15">
                    <!-- School Announcements -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <Label text="ðŸ“¢ School Announcements" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <ListView fx:id="announcementsListView" prefHeight="150">
                            <placeholder>
                                <Label text="No announcements" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </ListView>
                    </VBox>

                    <!-- My Achievements -->
                    <VBox spacing="10" prefWidth="450"
                          style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">
                        <Label text="ðŸ† My Achievements" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <ListView fx:id="achievementsListView" prefHeight="150">
                            <placeholder>
                                <Label text="No achievements yet" style="-fx-text-fill: #9e9e9e;"/>
                            </placeholder>
                        </ListView>
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom: Footer -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #fafafa; -fx-padding: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Label fx:id="statusLabel" text="Dashboard loaded" style="-fx-font-size: 11px;"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="lastUpdatedLabel" text="Last updated: Just now" style="-fx-font-size: 11px; -fx-text-fill: #757575;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                    style="-fx-padding: 6 15; -fx-cursor: hand;"/>
            <Button text="â“ Help" onAction="#handleHelp"
                    style="-fx-padding: 6 15; -fx-cursor: hand;"/>
        </HBox>
    </bottom>

</BorderPane>
