<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.UserManagementController"
            prefWidth="1200" prefHeight="800"
            styleClass="main-view">


    <!-- Top - Header and Toolbar -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="ðŸ‘¥ User Management" styleClass="page-title">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userCountLabel" text="0 users" styleClass="text-muted"/>
            </HBox>

            <Separator/>

            <!-- Toolbar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- Search -->
                <TextField fx:id="searchField"
                          promptText="ðŸ” Search users by name, username, or email..."
                          prefWidth="350"
                          styleClass="search-field"/>

                <!-- Role Filter -->
                <Label text="Role:"/>
                <ComboBox fx:id="roleFilterCombo" prefWidth="150"/>


                <!-- Status Filter -->
                <Label text="Status:"/>
                <ComboBox fx:id="statusFilterCombo" prefWidth="120"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Action Buttons -->
                <Button fx:id="refreshButton"
                        text="ðŸ”„ Refresh"
                        onAction="#handleRefresh"
                        prefWidth="100"
                        styleClass="button-secondary"/>

                <Button fx:id="addUserButton"
                        text="+ Add User"
                        onAction="#handleAddUser"
                        prefWidth="120"
                        styleClass="button-success"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center - User Table -->
    <center>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                <columns>
                    <!-- Select Column -->
                    <TableColumn fx:id="selectColumn" text="" prefWidth="40" sortable="false"/>

                    <!-- Username -->
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="120"/>

                    <!-- Full Name -->
                    <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="180"/>

                    <!-- Email -->
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>

                    <!-- Role -->
                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="130"/>

                    <!-- Status -->
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"/>

                    <!-- Last Login -->
                    <TableColumn fx:id="lastLoginColumn" text="Last Login" prefWidth="150"/>

                    <!-- Failed Logins -->
                    <TableColumn fx:id="failedLoginsColumn" text="Failed" prefWidth="60"/>

                    <!-- Actions -->
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="220" sortable="false"/>
                </columns>

                <placeholder>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="No users found" styleClass="placeholder-text"/>
                        <Label text="Click 'Add User' to create a new user" styleClass="text-muted"/>
                    </VBox>
                </placeholder>
            </TableView>

            <!-- Table Info Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="table-info-bar">
                <Label fx:id="tableInfoLabel" text="Showing 0 users" styleClass="text-muted"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="selectedCountLabel" text="" styleClass="text-muted"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom - Bulk Actions and Pagination -->
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="15" left="20"/>
            </padding>

            <Separator/>

            <!-- Bulk Actions Bar -->
            <HBox fx:id="bulkActionsBar" spacing="10" alignment="CENTER_LEFT" visible="false" managed="false"
                  styleClass="card, metric-info">
                <Label fx:id="bulkSelectionLabel" text="0 selected" styleClass="form-label"/>
                <Separator orientation="VERTICAL" prefHeight="20"/>
                <Button text="Enable Selected" onAction="#handleBulkEnable" prefWidth="120"/>
                <Button text="Disable Selected" onAction="#handleBulkDisable" prefWidth="120"/>
                <Button text="Unlock Selected" onAction="#handleBulkUnlock" prefWidth="120"/>
                <Button text="Delete Selected" onAction="#handleBulkDelete" prefWidth="120"
                        styleClass="button-danger"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Clear Selection" onAction="#handleClearSelection" prefWidth="120"/>
            </HBox>

            <!-- Statistics Bar -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="2">
                    <Label text="Total Users" styleClass="stat-label-small"/>
                    <Label fx:id="totalUsersLabel" text="0" styleClass="stat-value, text-primary"/>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="30"/>
                <VBox spacing="2">
                    <Label text="Active" styleClass="stat-label-small"/>
                    <Label fx:id="activeUsersLabel" text="0" styleClass="stat-value, text-success"/>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="30"/>
                <VBox spacing="2">
                    <Label text="Administrators" styleClass="stat-label-small"/>
                    <Label fx:id="adminsLabel" text="0" styleClass="stat-value, text-warning"/>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="30"/>
                <VBox spacing="2">
                    <Label text="Locked" styleClass="stat-label-small"/>
                    <Label fx:id="lockedUsersLabel" text="0" styleClass="stat-value, text-danger"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox spacing="2" alignment="CENTER_RIGHT">
                    <Label text="Last Refreshed" styleClass="stat-label-small"/>
                    <Label fx:id="lastRefreshLabel" text="Never" styleClass="text-muted"/>
                </VBox>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
