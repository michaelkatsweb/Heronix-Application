<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!--
    Academic Year Management View
    Location: src/main/resources/fxml/AcademicYearManagement.fxml

    Allows administrators to:
    - View current academic year
    - Create new academic years
    - Progress to next year (grade progression)
    - View statistics and history
-->
<VBox xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.heronix.ui.controller.AcademicYearManagementController"
    spacing="20"
    styleClass="main-container, root">


    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15"
        styleClass="header-card-rounded">
        <Label text="ðŸ“… Academic Year Management"
            styleClass="header-24-blue" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
            styleClass="button-secondary" />
    </HBox>

    <!-- Current Academic Year Card -->
    <VBox spacing="15" styleClass="card-shadow">
        <Label text="Current Academic Year" styleClass="section-header-18" />
        <Separator />

        <GridPane hgap="20" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="30" />
            </columnConstraints>

            <!-- Row 1 -->
            <Label text="Year Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                styleClass="form-label" />
            <Label fx:id="currentYearLabel" text="Not Set" GridPane.columnIndex="1" GridPane.rowIndex="0"
                styleClass="text-muted" />

            <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="0"
                styleClass="form-label" />
            <HBox GridPane.columnIndex="3" GridPane.rowIndex="0" spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="statusLabel" text="â—" styleClass="text-muted" />
                <Label fx:id="statusTextLabel" text="Active" styleClass="form-label" />
            </HBox>

            <!-- Row 2 -->
            <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                styleClass="form-label" />
            <Label fx:id="startDateLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="End Date:" GridPane.columnIndex="2" GridPane.rowIndex="1"
                styleClass="form-label" />
            <Label fx:id="endDateLabel" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />

            <!-- Row 3 -->
            <Label text="Graduation Date:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                styleClass="form-label" />
            <Label fx:id="graduationDateLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Graduated:" GridPane.columnIndex="2" GridPane.rowIndex="2"
                styleClass="form-label" />
            <Label fx:id="graduatedLabel" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />
        </GridPane>
    </VBox>

    <!-- Student Statistics -->
    <VBox spacing="15" styleClass="card-shadow">
        <Label text="Students by Grade Level" styleClass="section-header-18" />
        <Separator />

        <GridPane hgap="30" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
            </columnConstraints>

            <!-- Grade 9 -->
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5" alignment="CENTER"
                styleClass="card, metric-info">
                <Label text="Grade 9" styleClass="form-label" />
                <Label fx:id="grade9CountLabel" text="0" styleClass="stat-value-32-blue" />
                <Label text="Freshmen" styleClass="label-hint-666" />
            </VBox>

            <!-- Grade 10 -->
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5" alignment="CENTER"
                styleClass="card, metric-success">
                <Label text="Grade 10" styleClass="form-label" />
                <Label fx:id="grade10CountLabel" text="0" styleClass="stat-value-32-green" />
                <Label text="Sophomores" styleClass="label-hint-666" />
            </VBox>

            <!-- Grade 11 -->
            <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="5" alignment="CENTER"
                styleClass="card, metric-warning">
                <Label text="Grade 11" styleClass="form-label" />
                <Label fx:id="grade11CountLabel" text="0" styleClass="stat-value-32-orange" />
                <Label text="Juniors" styleClass="label-hint-666" />
            </VBox>

            <!-- Grade 12 -->
            <VBox GridPane.columnIndex="3" GridPane.rowIndex="0" spacing="5" alignment="CENTER"
                styleClass="card">
                <Label text="Grade 12" styleClass="form-label" />
                <Label fx:id="grade12CountLabel" text="0" styleClass="stat-value-32-pink" />
                <Label text="Seniors (Will Graduate)" styleClass="label-hint-666" />
            </VBox>
        </GridPane>

        <!-- Total Students -->
        <HBox spacing="10" alignment="CENTER" styleClass="padding-top-10">
            <Label text="Total Active Students:" styleClass="label-bold-14" />
            <Label fx:id="totalStudentsLabel" text="0" styleClass="stat-value-20-blue" />
        </HBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="â­ï¸ Progress to Next Year" onAction="#handleProgressToNextYear"
            styleClass="button-warning">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Button>

        <Button text="ðŸ“… Create New Academic Year" onAction="#handleCreateNewYear"
            styleClass="button-primary">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Button>

        <Button text="ðŸ“Š View History" onAction="#handleViewHistory"
            styleClass="button-primary">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Button>
    </HBox>

    <!-- Academic Years List -->
    <VBox spacing="15" styleClass="card-shadow">
        <Label text="All Academic Years" styleClass="section-header-18" />
        <Separator />

        <TableView fx:id="yearsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="yearNameColumn" text="Year Name" prefWidth="150" />
                <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="120" />
                <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="120" />
                <TableColumn fx:id="graduationDateColumn" text="Graduation" prefWidth="120" />
                <TableColumn fx:id="activeColumn" text="Active" prefWidth="80" />
                <TableColumn fx:id="graduatedColumn" text="Graduated" prefWidth="100" />
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" />
            </columns>
        </TableView>
    </VBox>

</VBox>
