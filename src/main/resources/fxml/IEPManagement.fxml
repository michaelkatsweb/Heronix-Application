<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    IEP Management View
    Manages IEPs - viewing, creating, editing, and tracking status

    Location: src/main/resources/fxml/IEPManagement.fxml
-->

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.heronix.ui.controller.IEPManagementController"
            styleClass="main-container">


    <!-- HEADER -->
    <top>
        <VBox styleClass="header-section">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="page-header">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Label text="IEP Management (Special Education)" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" onAction="#handleRefresh" styleClass="button-secondary"/>
                <Button text="Export Report" onAction="#handleExportReport" styleClass="button-secondary"/>
                <Button text="+ Create IEP" onAction="#handleCreateIEP" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <!-- Search and Filters -->
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="card">
                <padding>
                    <Insets top="12" right="15" bottom="12" left="15"/>
                </padding>
                <TextField fx:id="searchField" promptText="Search by student name or IEP number..."
                           prefWidth="300" onKeyPressed="#handleSearch"/>
                <ComboBox fx:id="statusFilter" promptText="Status" prefWidth="150"
                          onAction="#handleFilterChange"/>
                <ComboBox fx:id="caseManagerFilter" promptText="Case Manager" prefWidth="180"
                          onAction="#handleFilterChange"/>
                <Button text="Clear Filters" onAction="#handleClearFilters" styleClass="button-ghost"/>
            </HBox>

            <!-- Summary Labels -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="card">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
                <Label fx:id="totalIEPsLabel" text="Total: 0" styleClass="stat-label"/>
                <Label fx:id="activeIEPsLabel" text="Active: 0" styleClass="stat-label"/>
                <Label fx:id="draftIEPsLabel" text="Draft: 0" styleClass="stat-label"/>
                <Label fx:id="expiringIEPsLabel" text="Expiring Soon: 0" styleClass="stat-label-warning"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="selectionLabel" text="No IEP selected" styleClass="selection-info"/>
            </HBox>

            <!-- IEP Table -->
            <TableView fx:id="iepTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="studentColumn" text="Student" prefWidth="180" minWidth="150"/>
                    <TableColumn fx:id="iepNumberColumn" text="IEP Number" prefWidth="120" minWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100" minWidth="90"/>
                    <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="100" minWidth="90"/>
                    <TableColumn fx:id="daysRemainingColumn" text="Days Left" prefWidth="80" minWidth="70"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150" minWidth="120"/>
                    <TableColumn fx:id="caseManagerColumn" text="Case Manager" prefWidth="150" minWidth="120"/>
                    <TableColumn fx:id="servicesColumn" text="Services" prefWidth="80" minWidth="60"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" minWidth="130"/>
                </columns>
                <placeholder>
                    <Label text="No IEPs found. Create a new IEP or adjust your filters."/>
                </placeholder>
                <contextMenu>
                    <ContextMenu fx:id="rowContextMenu">
                        <items>
                            <MenuItem text="View Details" onAction="#handleViewDetails"/>
                            <MenuItem text="Edit IEP" onAction="#handleEditIEP"/>
                            <SeparatorMenuItem/>
                            <MenuItem text="Add Service" onAction="#handleAddService"/>
                            <MenuItem text="Manage Services" onAction="#handleManageServices"/>
                            <SeparatorMenuItem/>
                            <MenuItem text="Activate IEP" onAction="#handleActivateIEP"/>
                            <MenuItem text="Mark for Review" onAction="#handleMarkForReview"/>
                            <MenuItem text="Expire IEP" onAction="#handleExpireIEP"/>
                            <SeparatorMenuItem/>
                            <MenuItem text="Generate Report" onAction="#handleGenerateIEPReport"/>
                            <MenuItem text="Print IEP" onAction="#handlePrintIEP"/>
                            <SeparatorMenuItem/>
                            <MenuItem text="Delete IEP" onAction="#handleDeleteIEP"/>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
        </VBox>
    </center>

</BorderPane>
