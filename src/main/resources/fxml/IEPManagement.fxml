<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.IEPManagementController" prefWidth="1500" prefHeight="900">
    <top>
        <VBox spacing="10" style="-fx-background-color: #3f51b5; -fx-padding: 20;">
            <Label text="IEP Management (Special Education)" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Students with IEPs">
                <TableView fx:id="iepStudentsTableView" style="-fx-padding: 15;">
                    <columns>
                        <TableColumn text="Student" prefWidth="150"/>
                        <TableColumn text="IEP Status" prefWidth="120"/>
                        <TableColumn text="Next Review" prefWidth="100"/>
                    </columns>
                </TableView>
            </Tab>
            <Tab text="Create/Edit IEP">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <Button text="Create New IEP" onAction="#handleCreateIEP"/>
                    <TextArea promptText="Goals and accommodations..." prefRowCount="10"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
