<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.CafeteriaMealManagementController"
            prefWidth="1500" prefHeight="900">


    <top>
        <VBox spacing="15" styleClass="header-gradient">
            <Label text="Cafeteria & Meal Management" styleClass="page-title-white"/>
            <HBox spacing="15">
                <VBox spacing="3" HBox.hgrow="ALWAYS" styleClass="card-transparent">
                    <Label text="Meals Served Today" styleClass="text-white"/>
                    <Label fx:id="mealsServedLabel" text="842" styleClass="text-white"/>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS" styleClass="card-transparent">
                    <Label text="Free/Reduced Eligible" styleClass="text-white"/>
                    <Label fx:id="freeReducedLabel" text="312" styleClass="text-white"/>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS" styleClass="card-transparent">
                    <Label text="Revenue Today" styleClass="text-white"/>
                    <Label fx:id="revenueLabel" text="$2,142" styleClass="text-white"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Menu Planning">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <TableView fx:id="menuTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                            <TableColumn fx:id="breakfastColumn" text="Breakfast" prefWidth="200"/>
                            <TableColumn fx:id="lunchColumn" text="Lunch" prefWidth="200"/>
                            <TableColumn fx:id="nutritionColumn" text="Nutrition Info" prefWidth="150"/>
                        </columns>
                    </TableView>
                    <Button text="Create Menu" onAction="#handleCreateMenu" styleClass="button-primary"/>
                </VBox>
            </Tab>
            <Tab text="Student Accounts">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <TableView fx:id="accountsTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="studentNameColumn" text="Student" prefWidth="150"/>
                            <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="100"/>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Reports">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Button text="Meal Count Report" onAction="#handleMealCountReport" maxWidth="300"/>
                    <Button text="Financial Report" onAction="#handleFinancialReport" maxWidth="300"/>
                    <Button text="Allergy Report" onAction="#handleAllergyReport" maxWidth="300"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox spacing="10" styleClass="card">
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>
