<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.Plan504ManagementController" prefWidth="1500" prefHeight="900">

    <top>
        <VBox spacing="10" styleClass="card">
            <Label text="504 Plan Management" styleClass="page-title-white"/>
        </VBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <TableView fx:id="plan504TableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Student" prefWidth="150"/>
                    <TableColumn text="Plan Status" prefWidth="120"/>
                    <TableColumn text="Accommodations" prefWidth="200"/>
                    <TableColumn text="Next Review" prefWidth="100"/>
                </columns>
            </TableView>
            <Button text="Create 504 Plan" onAction="#handleCreate504Plan"/>
        </VBox>
    </center>
</BorderPane>
