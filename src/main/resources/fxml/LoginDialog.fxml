<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.LoginController"
            prefWidth="450" prefHeight="550"
            styleClass="login-root">

    <!-- Header with State and District Display -->
    <top>
        <VBox spacing="5" alignment="CENTER" styleClass="card" style="-fx-padding: 20 20 15 20;">
            <!-- App Title -->
            <Label text="Heronix" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <!-- State/District Info Container -->
            <VBox fx:id="stateInfoContainer" spacing="2" alignment="CENTER">
                <!-- State Name (e.g., "Florida", "Texas") -->
                <Label fx:id="stateNameLabel"
                       text=""
                       style="-fx-font-size: 18; -fx-font-weight: semi-bold; -fx-text-fill: #E3F2FD;"
                       visible="false"
                       managed="false"/>

                <!-- District/County Name (e.g., "Hernando County Schools") -->
                <Label fx:id="districtNameLabel"
                       text=""
                       style="-fx-font-size: 13; -fx-text-fill: #B3E5FC;"
                       visible="false"
                       managed="false"/>
            </VBox>

            <!-- Secure Login subtitle -->
            <Label text="Secure Login" style="-fx-font-size: 12; -fx-text-fill: #90CAF9; -fx-padding: 5 0 0 0;"/>
        </VBox>
    </top>

    <!-- Center - Login Form -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 40 40 30 40;">

            <!-- Logo/Icon Area -->
            <Label text="ðŸ”" style="-fx-font-size: 48;"/>

            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username:" styleClass="form-label"/>
                <TextField fx:id="usernameField"
                          promptText="Enter your username"
                          prefWidth="350"
                          style="-fx-font-size: 14; -fx-padding: 10;">
                </TextField>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password:" styleClass="form-label"/>
                <PasswordField fx:id="passwordField"
                              promptText="Enter your password"
                              prefWidth="350"
                              style="-fx-font-size: 14; -fx-padding: 10;">
                </PasswordField>
            </VBox>

            <!-- Remember Me -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="rememberMeCheckBox" text="Remember me"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Hyperlink fx:id="forgotPasswordLink" text="Forgot Password?" onAction="#handleForgotPassword"/>
            </HBox>

            <!-- Error Message -->
            <Label fx:id="errorLabel"
                   text=""
                   textFill="red"
                   wrapText="true"
                   maxWidth="350"
                   visible="false"
                   managed="false"
                   styleClass="error-label-bg"/>

            <!-- Info Message -->
            <Label fx:id="infoLabel"
                   text=""
                   styleClass="text-primary, info-label-bg"
                   wrapText="true"
                   maxWidth="350"
                   visible="false"
                   managed="false"/>

            <!-- Login Button -->
            <Button fx:id="loginButton"
                    text="Login"
                    onAction="#handleLogin"
                    defaultButton="true"
                    prefWidth="350"
                    prefHeight="45"
                    styleClass="button-success">
            </Button>

            <!-- Loading Indicator -->
            <HBox fx:id="loadingBox"
                  spacing="10"
                  alignment="CENTER"
                  visible="false"
                  managed="false">
                <ProgressIndicator prefWidth="20" prefHeight="20"/>
                <Label text="Authenticating..." styleClass="text-muted"/>
            </HBox>

            <!-- Session Info (for debugging) -->
            <Label fx:id="sessionInfoLabel"
                   text=""
                   styleClass="text-hint-11"
                   visible="false"
                   managed="false"/>

        </VBox>
    </center>

    <!-- Bottom - Footer -->
    <bottom>
        <VBox spacing="10" alignment="CENTER" styleClass="card">
            <Separator prefWidth="400"/>
            <Label text="First time user? Default credentials:" styleClass="text-muted-12"/>
            <Label text="Username: admin  |  Password: Admin@123" styleClass="text-hint-11"/>
            <Label text="Please change the default password after first login" styleClass="text-muted"/>
            <Separator prefWidth="400"/>
            <HBox spacing="20" alignment="CENTER">
                <Hyperlink text="Help" onAction="#handleHelp" style="-fx-font-size: 11;"/>
                <Label text="â€¢" styleClass="text-separator"/>
                <Hyperlink text="About" onAction="#handleAbout" style="-fx-font-size: 11;"/>
                <Label text="â€¢" styleClass="text-separator"/>
                <Label text="v1.0.0" styleClass="text-hint-11"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
