<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.AthleticsExtracurricularController"
            stylesheets="@../css/application.css"
            prefWidth="1500" prefHeight="900">

    <top>
        <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #f44336, #d32f2f); -fx-padding: 20;">
            <Label text="Athletics & Extracurricular Activities" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <HBox spacing="15">
                <VBox spacing="3" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12;">
                    <Label text="Teams/Clubs" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="teamsLabel" text="42" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 12;">
                    <Label text="Participants" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Label fx:id="participantsLabel" text="845" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Teams & Clubs">
                <TableView fx:id="teamsTableView" style="-fx-padding: 15;">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
                        <TableColumn fx:id="coachColumn" text="Coach/Advisor" prefWidth="150"/>
                        <TableColumn fx:id="membersColumn" text="Members" prefWidth="80"/>
                    </columns>
                </TableView>
            </Tab>
            <Tab text="Schedules">
                <TableView fx:id="scheduleTableView" style="-fx-padding: 15;">
                    <columns>
                        <TableColumn fx:id="eventColumn" text="Event" prefWidth="200"/>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                        <TableColumn fx:id="locationColumn" text="Location" prefWidth="150"/>
                    </columns>
                </TableView>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
