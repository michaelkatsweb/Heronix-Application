<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.ui.controller.StudentAssessmentDashboardController" prefWidth="1500" prefHeight="900">

    <top>
        <VBox spacing="10" styleClass="card">
            <Label text="Student Assessment Dashboard" styleClass="page-title-white"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Overview of grade distribution and recent assessments" style="-fx-text-fill: #aaa;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="summaryLabel" text="" style="-fx-font-weight: bold;"/>
                <Button text="Refresh" onAction="#handleRefresh"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 15;">
            <HBox spacing="15" VBox.vgrow="SOMETIMES">
                <VBox HBox.hgrow="ALWAYS" style="-fx-min-height: 300;">
                    <Label text="Grade Distribution (Final Grades)" style="-fx-font-weight: bold; -fx-font-size: 13;"/>
                    <BarChart fx:id="assessmentChart" VBox.vgrow="ALWAYS" animated="false">
                        <xAxis><CategoryAxis fx:id="xAxis" label="Letter Grade"/></xAxis>
                        <yAxis><NumberAxis fx:id="yAxis" label="Count"/></yAxis>
                    </BarChart>
                </VBox>
                <VBox spacing="8" style="-fx-min-width: 220; -fx-padding: 10;" styleClass="card">
                    <Label text="Quick Stats" style="-fx-font-weight: bold; -fx-font-size: 13;"/>
                    <Label fx:id="totalGradesLabel" text="Total Final Grades: --"/>
                    <Label fx:id="avgGpaLabel" text="School Avg GPA: --"/>
                    <Label fx:id="honorRollLabel" text="Honor Roll (3.5+): --"/>
                    <Label fx:id="atRiskLabel" text="At Risk (&lt; 2.0): --"/>
                    <Label fx:id="improvingLabel" text="GPA Improving: --"/>
                    <Label fx:id="decliningLabel" text="GPA Declining: --"/>
                </VBox>
            </HBox>

            <Label text="Recent Grade Entries" style="-fx-font-weight: bold; -fx-font-size: 13;"/>
            <TableView fx:id="assessmentTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colStudent" text="Student" prefWidth="180"/>
                    <TableColumn fx:id="colCourse" text="Course" prefWidth="180"/>
                    <TableColumn fx:id="colGrade" text="Grade" prefWidth="70"/>
                    <TableColumn fx:id="colScore" text="Score" prefWidth="70"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="90"/>
                    <TableColumn fx:id="colTerm" text="Term" prefWidth="120"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="colTeacher" text="Teacher" prefWidth="150"/>
                </columns>
            </TableView>
            <Label fx:id="statusLabel" text="Ready"/>
        </VBox>
    </center>
</BorderPane>
